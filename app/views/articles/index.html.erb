<div class="row">
  <div class="col-sm-10">
    <h2><strong>Articles</strong></h2>
  </div>
  <div class="col-sm-2">
    <%= link_to 'New Article', new_article_path, class: "btn btn-dark" %>
  </div>
</div>

<% count = 0 %>
<div class="row">
  <% @articles.each do |article| %>
    <div class="col-sm-6">
      <div class="card bg-dark my-2">
        <div class="card-body">
          <h3 class="card-title"><%= link_to article.title, article_path(article), class: "text-light mx-2" %></h3>
          <p class="card-text text-muted mx-2"><%= article.text %></p>
          <div class="row">
            <%= link_to 'Edit', edit_article_path(article), class: "col btn btn-light mx-4" %>
            <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "col btn btn-danger mx-4" %>
          </div>
        </div>
      </div>
    </div>
    <% if count % 2 == 1 %>
      </div>
      <div class="row">
    <% end %>
    <!-- continue on -->
    <% count += 1 %>
  <% end %>
</div>